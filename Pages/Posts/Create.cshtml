@page
@model WikiClase.Pages.Posts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.IdUser" class="control-label"></label>
                <input asp-for="Post.IdUser" class="form-control" />
                <span asp-validation-for="Post.IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Text" class="control-label"></label>
                <input asp-for="Post.Text" class="form-control" />
                <span asp-validation-for="Post.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Image" class="control-label"></label>
                <input asp-for="Post.Image" class="form-control" type="file" accept=".jpg" name="Imagen"/>
                <span asp-validation-for="Post.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.IdCategory" class="control-label">Category</label>
                <select asp-for="Post.IdCategory" class="form-control" asp-items="@ViewBag.Categorias"></select>
                <span asp-validation-for="Post.IdCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.IdTags" class="control-label">Tag</label>
                <select asp-for="Post.IdTags" class="form-control" asp-items="@ViewBag.Etiquetas"></select>
                <span asp-validation-for="Post.IdTags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
